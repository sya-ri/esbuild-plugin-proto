{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "types": ["jest", "node"],
    "outDir": "./lib",
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false
  },
  "include": ["src"]
}
